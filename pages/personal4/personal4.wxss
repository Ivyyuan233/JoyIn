.page {
  margin-bottom: 100rpx;
  background-color: #f0f9fa;
}

.back {
  width: 100%;
  position: fixed;
  text-align: center;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx; /*实现文字垂直居中*/
  background: #557d8a;
  font-size: 50rpx;
  color: white;
  box-shadow: 6rpx 6rpx 6rpx 6rpx #aaa;
}

.button_hover {
  background-color: #eee;
}

.item1 {
  margin-top: 50rpx;
  color: #557d8a;
  padding: 20rpx;
}

.left_item {
  margin-bottom: 50rpx;
  position: relative;
  top: 0;
  left: 10%;
  width: 80%;
  height: 200rpx;
  background-color: #7bd6ef;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #aaa;
  -moz-border-radius: 20rpx;
  -webkit-border-radius: 20rpx;
  border-radius: 20rpx;
}

.left_item:before {
  position: absolute;
  content: "";
  right: 100%;
  top: 70rpx;
  border-top: 13px solid transparent;
  border-right: 26px solid #7bd6ef;
  border-bottom: 13px solid transparent;
}

.right_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 50rpx;
  position: relative;
  top: 0;
  left: 10%;
  width: 80%;
  height: 150rpx;
  background-color: #7bd6ef;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #aaa;
  -moz-border-radius: 20rpx;
  -webkit-border-radius: 20rpx;
  border-radius: 20rpx;
}

.right_item:after {
  position: absolute;
  content: "";
  left: 100%;
  top: 55rpx;
  border-top: 13px solid transparent;
  border-left: 26px solid #7bd6ef;
  border-bottom: 13px solid transparent;
}

.line {
