/* pages/personal3/personal3.wxss */

.org_title {
  margin-top: 50rpx;
  color: gray;
  margin-bottom: 20rpx;
}

.organizer {
  background-color: whitesmoke;
  width: 100%;
  display: flex;
  border-radius: 20rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #aaa;
}

.organizer_avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 30rpx;
  border-radius: 50%;
}

.org_left {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.sex {
  align-self: center;
  width: 40rpx;
  height: 40rpx;
}

.org_name {
  font-size: 50rpx;
}

.back {
  width: 100%;
  position: fixed;
  text-align: center;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx; /*实现文字垂直居中*/
  background: #557d8a;
  font-size: 50rpx;
  color: white;
  box-shadow: 6rpx 6rpx 6rpx 6rpx #aaa;
}

.act_title {
  color: gray;
  margin-bottom: 20rpx;
}

.item {
  display: flex;
  background-color: whitesmoke;
  width: 100%;
  height: 180rpx;
  border-radius: 20rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #aaa;
}

.item_image {
  width: 100rpx;
  height: 100rpx;
}

.item_title {
  width: 330rpx;
  padding: 20rpx 0;
  align-self: flex-start;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #557d8a;
}

.item_place {
  padding: 20rpx 0;
  position: left, bottom;
  font-size: 20rpx;
  color: #557d8a;
}

.item_date {
  padding: 20rpx 5rpx;
  align-self: flex-end;
  font-size: 20rpx;
  color: #557d8a;
}

.bd {
  padding: 50rpx;
  margin-bottom: 100rpx;
  background-color: #f0f9fa;
}

.star_box {
  margin: 50rpx auto;
  width: 80%;
  display: flex;
  justify-content: space-between;
}

.star {
  height: 80rpx;
  width: 80rpx;
}

.comment {
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx;
  height: 300rpx;
  border: 1rpx solid #eee;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #aaa;
}

.button {
  width: 80%;
  background-color: #7bd6ef;
  color: white;
  text-align: center;
  font-size: 50rpx;
  margin: 30rpx auto;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 10rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #aaa;
}

.line {
  margin-top: 50rpx;
  height: 1px;
  border-top: 1px solid #ddd;
  text-align: center;
}

.line span {
  position: relative;
  top: -30rpx;
  color: #ddd;
  background: #f0f9fa;
  padding: 0 20px;
}
